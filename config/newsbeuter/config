download-path "/home/gregf/media/videos/podcasts/"

browser caravel
player mpv

goto-next-feed no
notify-program notify-send
notify-always yes
notify-format "%d new articles (%n unread articles, %f unread feeds)"

#
# Custom Bindings
#
bind-key e open-in-browser-and-mark-read
bind-key a mark-feed-read

#
# vimlike bindings
#
unbind-key ^B
bind-key ^B pageup
unbind-key ^F
bind-key ^F pagedown
bind-key k up
bind-key j down
bind-key q quit
bind-key d mark-feed-read
bind-key D mark-all-feeds-read
unbind-key l
bind-key l open
bind-key m toggle-show-read-feeds
unbind-key n
bind-key n next-unread-feed
unbind-key p
bind-key p prev-unread-feed

#
# Colors
#
color article             default  default
color background          default  default
color listnormal          default  default
color listnormal_unread   default  default  bold
color listfocus           default  black
color listfocus_unread    default  black    bold
color info                yellow   default  bold

highlight article     "^(Feed|Title|Author|Link|Date):"  red    default  bold
