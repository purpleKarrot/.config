# Base16 Monokai
set $base00 #282828
set $base01 #323232
set $base02 #49483e
set $base03 #75715e
set $base04 #a59f85
set $base05 #c8c8c8
set $base06 #e0e0e0
set $base07 #f8f8f0
set $base08 #f92672
set $base09 #fd971f
set $base0A #e6db74
set $base0B #a6e22e
set $base0C #66c03a
set $base0D #66d9ef
set $base0E #ae81ff
set $base0F #cc6633

# set some nice colors      border     background  text      indicator
client.focused              $base09    $base09     $base01   $base0D
client.focused_inactive     $base01    $base01     $base09   $base02
client.unfocused            $base01    $base01     $base04   $base02
client.urgent               $base08    $base08     $base01   $base08

bar {
    status_command i3blocks -c ~/.config/i3/blocks.cfg
    colors {
        background          $base01
        statusline          $base04
        separator           $base01
        focused_workspace   $base09    $base09    $base01
        active_workspace    $base01    $base01    $base09
        inactive_workspace  $base01    $base01    $base04
        urgent_workspace    $base08    $base08    $base01
    }
}
