[advice]
	detachedHead = false

[alias]
	# Amend the currently staged files to the latest commit
	amend = commit --amend --reuse-message=HEAD

	# Show cached/staged changes
	cached = diff --cached
	staged = diff --staged

	# View the current working tree status using the short format
	s = status -s

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch -a
	remotes = remote -v

	kitty = difftool --dir-diff
	meld = difftool --dir-diff --gui

[core]
	editor = kak
	pager = delta --light

[color]
	ui = auto

[diff]
	tool = kitty
	guitool = meld

[difftool]
	prompt = false
	trustExitCode = true

[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE

[merge]
	tool = meld

[mergetool]
	prompt = false

[push]
	default = current

[pull]
	rebase = true

[rebase]
	autostash = true

[user]
	name = Daniel Pfeifer
	email = daniel@pfeifer-mail.de

[includeIf "gitdir:~/Work/"]
	path = config-work
