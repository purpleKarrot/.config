[advice]
	detachedHead = false

[alias]
	# Amend the currently staged files to the latest commit
	amend = commit --amend --reuse-message=HEAD

	# Show cached/staged changes
	cached = diff --cached
	staged = diff --staged

	# View the current working tree status using the short format
	s = status -s

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch -a
	remotes = remote -v

	kitty = difftool --dir-diff
	meld = difftool --dir-diff --gui

[core]
	editor = kak

[color]
	ui = auto

[color "diff"]
	meta = 16 bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 224
	newNormal = green bold
	newHighlight = green bold 157

[color "branch"]
	current = 16 reverse
	local = 16
	remote = green

[color "status"]
	added = green
	changed = 16
	untracked = blue

[diff]
	tool = kitty
	guitool = meld

[difftool]
	prompt = false
	trustExitCode = true

[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE

[merge]
	tool = meld

[mergetool]
	prompt = false

[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX

[push]
	default = current

[user]
	name = Daniel Pfeifer
	email = daniel@pfeifer-mail.de

[includeIf "gitdir:~/Work/"]
	path = config-work
